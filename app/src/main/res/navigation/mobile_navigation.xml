<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/cityListFragment">
    <fragment
        android:id="@+id/cityListFragment"
        android:name="com.poc.openweatherapisample.view.CityListFragment"
        android:label="City List"
        tools:layout="@layout/city_list_fragment" >
        <action
            android:id="@+id/action_cityListFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.poc.openweatherapisample.view.WeatherDetailsFragment"
        android:label="Weather details" />
</navigation>